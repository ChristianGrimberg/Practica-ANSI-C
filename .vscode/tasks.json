    "version": "2.0.0",
    "tasks": [
        {
            "label": "ANSI C Program Compiler",
            "command": "cc",
            "type": "shell",
            "args": [
                "-o",
                "program", // Program output
                "library.c", // Library files
                "main.c" // Main file
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
